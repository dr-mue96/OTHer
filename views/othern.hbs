<div class="container-fluid">
    <div class="row p-2">
        <div class="col-3 p-3">
            <div class="position-fixed">
                {{> menu id="othern"}}
            </div>
        </div>

        <div class="col-6 p-4">
            <h3>{{title}}</h3>
            <form action="/othern/other" method="POST">
                <div class="mb-3">
                    <textarea autofocus style="resize: none" name="message" class="md-textarea form-control" rows="4" cols="50" placeholder="Text eingeben"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block w-100 rounded-pill" style="width:150px; border-radius: 25px">Othern</button>
            </form>
        </div>

        <div class="col-3 p-3">
            <div class="position-fixed">
                {{> search }}
            </div>
        </div>
    </div>
</div>
